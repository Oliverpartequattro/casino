            <ColumnDefinition Name="jump3"  Width="50px"/>
            <ColumnDefinition Name="jump4"  Width="50px"/>
            <ColumnDefinition Name="jump5"  Width="50px"/>
            <ColumnDefinition Name="jump6"  Width="50px"/>
            <ColumnDefinition Name="jump7"  Width="50px"/>
            <ColumnDefinition Name="jump8"  Width="50px"/>
            <ColumnDefinition Name="jump9"  Width="50px"/>
            <ColumnDefinition Name="jump10" Width="50px"/>
            <ColumnDefinition Name="jump11" Width="50px"/>
            <ColumnDefinition Name="jump12" Width="50px"/>
            <ColumnDefinition Name="jump13" Width="50px"/>
            <ColumnDefinition Name="jump14" Width="50px"/>
            <ColumnDefinition Name="jump15" Width="50px"/>
            <ColumnDefinition Name="jump16" Width="50px"/>
            <ColumnDefinition Name="jump17" Width="50px"/>
            <ColumnDefinition Name="jump18" Width="50px"/>
            <ColumnDefinition Name="jump19" Width="50px"/>
            <ColumnDefinition Name="jump20" Width="50px"/>
        </Grid.ColumnDefinitions>
    </Grid>
</Window>
