<Window x:Class="CasinoSimulator.ChickenCross"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasinoSimulator"
        mc:Ignorable="d"
        Title="ChickenCross" Height="400" Width="1000">
        <Canvas Name="gameCanvas" Background="SlateGray" Width="1000" Height="400">
        <Grid Height="400" Width="1000"  VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" Name="ColumnStart"/>
                <ColumnDefinition Name="Column1"/>
                <ColumnDefinition Name="Column2"/>
                <ColumnDefinition Name="Column3"/>
                <ColumnDefinition Name="Column4"/>
                <ColumnDefinition Name="Column5"/>
                <ColumnDefinition Name="Column6"/>
                <ColumnDefinition Name="Column7"/>
                <ColumnDefinition Name="Column8"/>
                <ColumnDefinition Name="Column9"/>
                <ColumnDefinition Name="Column10"/>
                <ColumnDefinition Name="Column11"/>
                <ColumnDefinition Name="Column12"/>
                <ColumnDefinition Name="Column13"/>
                <ColumnDefinition Name="Column14"/>
                <ColumnDefinition Name="Column15"/>
                <ColumnDefinition Name="Column16"/>
                <ColumnDefinition Name="Column17"/>
                <ColumnDefinition Name="Column18"/>
                <ColumnDefinition Name="Column19"/>
                <ColumnDefinition Name="Column20"/>
                <ColumnDefinition Width="100" Name="ColumnEnd"/>
            </Grid.ColumnDefinitions>
            <Border Background="DimGray" Grid.Column="1"/>
            <Border Background="DimGray" Grid.Column="3"/>
            <Border Background="DimGray" Grid.Column="5"/>
            <Border Background="DimGray" Grid.Column="7"/>
            <Border Background="DimGray" Grid.Column="9"/>
            <Border Background="DimGray" Grid.Column="11"/>
            <Border Background="DimGray" Grid.Column="13"/>
            <Border Background="DimGray" Grid.Column="15"/>
            <Border Background="DimGray" Grid.Column="17"/>
            <Border Background="DimGray" Grid.Column="19"/>
            <Border Background="DarkOliveGreen" Grid.Column="0"/>
            <Border Background="DarkOliveGreen" Grid.Column="21"/>
            <Label Grid.Column="1" Content="1x1" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center"/>
        </Grid>
        </Canvas>
    </Window>
