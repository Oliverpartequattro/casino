<Window x:Class="CasinoSimulator.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration/Login" Height="200" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Tabs for Registration and Login -->
        <TabControl>
            
            <!-- Login Tab -->
            <TabItem Header="Login">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Username:" />
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="LoginUsername" />

                    <Label Grid.Row="1" Content="Password:" />
                    <PasswordBox Grid.Row="1" Grid.Column="1" x:Name="LoginPassword" />

                    <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Login" Click="LoginButton_Click" />
                </Grid>
            </TabItem>
            
            <!-- Registration Tab -->
            <TabItem Header="Register">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Username:" />
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="RegisterUsername" />

                    <Label Grid.Row="1" Content="Age:" />
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="RegisterAge" />

                    <Label Grid.Row="2" Content="Password:" />
                    <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="RegisterPassword" />

                    <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Register" Click="RegisterButton_Click" />
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>