<Window x:Class="CasinoSimulator.Roulette"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Roulette" Height="800" Width="1600" Background="#2E2E2E">
    <Grid>
        <!-- Roulette Wheel -->
        <Canvas Name="rouletteWheel" Width="400" Height="400" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,50,0,0">
            <!-- Wheel sections and ball are generated dynamically in the code-behind -->
        </Canvas>

        <!-- Betting Table -->
        <Grid Name="bettingTable" Width="980" Height="300" Background="Green" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,50,50,0">
            <!-- Numbers, colors, and bets will be dynamically generated -->
        </Grid>

        <!-- Buttons and Status -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,0,0,50">
            <Button Content="Place Bet" Width="100" Height="30" Margin="5" Click="PlaceBet_Click" />
            <Button Content="Start Wheel" Width="100" Height="30" Margin="5" Click="StartWheel_Click" />
            <Button Content="Exit" Width="100" Height="30" Margin="5" Click="Exit_Click" />
            <TextBlock Name="currentBetText" Text="Current Bet: 0" Foreground="White" FontSize="14" Margin="5" />
            <TextBlock Name="balanceText" Text="Balance: 2800" Foreground="White" FontSize="14" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
