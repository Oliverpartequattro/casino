<Window x:Class="CasinoSimulator.GameChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasinoSimulator"
        mc:Ignorable="d"
        Title="GameChoice" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Padding="10" Background="White" Grid.Row="1" Grid.Column="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Name="imgBlackjack" Source="img/blackjack.png" Width="100" Height="100" HorizontalAlignment="Center"/>
                <Button Name="btnBlackjack" Content="Blackjack" Height="30" Width="100" Margin="10,10,10,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Padding="10" Background="White" Grid.Row="1" Grid.Column="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Name="imgRoulette" Source="img/blackjack.png" Width="100" Height="100" Grid.Row="1" Grid.Column="1"/>

                <Button Name="btnRoulette" Content="Roulette" Click="btnRoulette_Click"/>

            </StackPanel>
        </Border>

        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Padding="10" Background="White" Grid.Row="1" Grid.Column="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Name="imgSlot" Source="img/blackjack.png" Width="100" Height="100" Grid.Row="1" Grid.Column="2"/>

                <Button Name="btnSlot" Content="Slot" Click="btnSlot_Click"/>
            </StackPanel>
        </Border>

        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Padding="10" Background="White" Grid.Row="1" Grid.Column="3">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Name="imgCross" Source="img/blackjack.png" Width="100" Height="100" Grid.Row="1" Grid.Column="3"/>

                <Button Name="btnCross" Content="Chicken Cross" Click="btnCross_Click"/>
            </StackPanel>
        </Border>

        <TextBlock Text="Casino Simulator" Grid.ColumnSpan="4" HorizontalAlignment="Center" Margin="0 50 0 0" FontSize="50" FontFamily="Brush Script MT" Foreground="White"/>

        <Border BorderBrush="#EFA00B" HorizontalAlignment="Right" VerticalAlignment="Top" BorderThickness="2" CornerRadius="10" Padding="10" Background="#525252" Grid.Row="0" Grid.Column="3" Height="40" Width="160" Margin="5 5 5 5">
            <TextBlock Name="txtBalance" Text="Egyenleg: 111.111 Ft" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 0 0 0" Foreground="White" FontFamily="Brush Script MT" FontSize="17"/>
        </Border>
    </Grid>
</Window>
