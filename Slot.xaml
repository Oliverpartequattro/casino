<Window x:Class="CasinoSimulator.Slot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasinoSimulator"
        mc:Ignorable="d"
        Title="Slot" Height="450" Width="800">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Slot Machine" FontSize="32" HorizontalAlignment="Center" Margin="10"/>

        <!-- Reels -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderBrush="Black" BorderThickness="2" Margin="10" Padding="10" Background="White">
                <TextBlock x:Name="Reel1" Text="?" FontSize="48" HorizontalAlignment="Center"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="2" Margin="10" Padding="10" Background="White">
                <TextBlock x:Name="Reel2" Text="?" FontSize="48" HorizontalAlignment="Center"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="2" Margin="10" Padding="10" Background="White">
                <TextBlock x:Name="Reel3" Text="?" FontSize="48" HorizontalAlignment="Center"/>
            </Border>
        </StackPanel>

        <!-- Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="SpinButton" Content="Spin" FontSize="24" Padding="10" Margin="10" Click="SpinButton_Click"/>
            <Button x:Name="ResetButton" Content="Reset" FontSize="24" Padding="10" Margin="10" Click="ResetButton_Click"/>
        </StackPanel>

        <!-- Credits Display -->
        <TextBlock Grid.Row="2" Text="Credits: 100" x:Name="CreditsText" FontSize="24" HorizontalAlignment="Right" Margin="10"/>
    </Grid>
</Window>
