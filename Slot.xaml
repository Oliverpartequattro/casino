<Window x:Class="CasinoSimulator.Slot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasinoSimulator"
        mc:Ignorable="d"
        Title="Slot" Height="450" Width="800">
    <Grid Name="CeherrySlot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Fruit Brush" FontFamily="Showcard Gothic" FontSize="60" FontStyle="Italic" Foreground="Black" HorizontalAlignment="Center" Margin="10"/>

            <Border Name="Border1" Grid.Row="1" Grid.Column="0"  BorderThickness="2" Margin="60 45 " Padding="10" Background="#FF020202">
                <TextBlock Opacity="0" x:Name="Reel1" Width="60" Text="" FontSize="48" HorizontalAlignment="Center" TextAlignment="Center"/>
            </Border>
            <Border Name="Border2"  Grid.Row="1" Grid.Column="1" BorderThickness="2" Margin="60 45 " Padding="10" Background="Black">
                    <TextBlock Opacity="0" x:Name="Reel2" Width="60" Text="" FontSize="48" HorizontalAlignment="Center" TextAlignment="Center"/>
            </Border>
            <Border Name="Border3"  Grid.Row="1" Grid.Column="2" BorderThickness="2" Margin="60 45 " Padding="10" Background="Black">
                    <TextBlock Opacity="0" x:Name="Reel3" Width="60" Text="" FontSize="48" HorizontalAlignment="Center" TextAlignment="Center"/>
            </Border>

        <StackPanel Grid.Row="2" Grid.RowSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="SpinButton" Content="Spin" FontSize="24" Padding="10" Margin="10" Click="SpinButton_Click" Background="Black" Foreground="White"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="PlussButton" Content="+" FontSize="40" Margin="10" Padding="10" Click="PlusButton_Click" Height="70" Width="70" Background="Black" Foreground="White" VerticalAlignment="Center"/>
            <Button x:Name="MinusButton" Content="-" FontSize="40"  Margin="10" Padding="10"  Click="MinusButton_Click" Height="65" Width="65" Foreground="White" Background="Black" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Grid.Row="2" Text="Credits: 100" x:Name="CreditsText" FontSize="24" HorizontalAlignment="Right" Margin="10" FontFamily="Showcard Gothic"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Grid.Row="2" Text="Bet: 100" x:Name="BetText" FontSize="24" HorizontalAlignment="Right" Margin="10" FontFamily="Showcard Gothic"/>
        </StackPanel>
        <Label Name="CherrySlot"/>

    </Grid>
</Window>
